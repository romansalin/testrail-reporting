root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,*.js,*.jsx,*.yml,*.css,*.less}]
indent_style = space
indent_size = 2

[{*.py,*.html}]
indent_style = space
indent_size = 4

[{*.md,*.rst}]
max_line_length = 0
trim_trailing_whitespace = false
